{
    "manifest_version": 3,
    "name": "Xfinity Bill Negotiator",
    "version": "1.0",
    "description": "AI-assisted Xfinity bill negotiation",
    "permissions": [
      "storage",
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "https://www.xfinity.com/*"
    ],
    "action": {
      "default_popup": "public/popup.html"
    },
    "background": {
      "service_worker": "dist/background.js",
      "type": "module"
    },
    "content_scripts": [{
      "matches": ["https://www.xfinity.com/*"],
      "js": ["dist/content.js"]
    }],
    "options_page": "public/options.html",
    "web_accessible_resources": [{
        "resources": ["dist/utils/*"],
        "matches": ["<all_urls>"]
    }]
  }
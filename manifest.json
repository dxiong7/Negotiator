{
    "manifest_version": 3,
    "name": "Xfinity Bill Negotiator",
    "version": "1.0",
    "description": "AI-assisted Xfinity bill negotiation",
    "permissions": [
      "storage",
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "https://www.xfinity.com/*"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [{
      "matches": ["https://www.xfinity.com/*"],
      "js": ["content.js"]
    }],
    "options_page": "options.html"
  }